<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB"
    android:orientation="vertical"
    tools:context=".MainActivity4">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:background="@drawable/shapenocolor"
        android:gravity="center"
        android:text="Danh Sách Các Lớp"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:background="@drawable/shape2"
        android:drawableStart="@drawable/baseline_search_24"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/shape4"
        android:text="Tổng số: 2 Sinh viên"
        android:textColor="@color/black"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="108dp"
            android:layout_height="98dp"
            android:src="@drawable/_1"/>

        <Space
            android:layout_width="15dp"

            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Mã Sinh Viên:"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="21CCNTT21A"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Trần Minh Thiện"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Giới tính: Nam"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/_infoicon"/>
            <ImageView
                android:id="@+id/delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/_deleteicon"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#888888" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="110dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="108dp"
            android:layout_height="98dp"
            android:src="@drawable/_2"/>


        <Space
            android:layout_width="10dp"

            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Mã Sinh Viên:"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="21CCNTT21A"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView55"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Trần Minh Thiện"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Giới tính: Nam"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/info2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/_infoicon"/>
            <ImageView
                android:id="@+id/delete2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/_deleteicon"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#888888" />


</LinearLayout>